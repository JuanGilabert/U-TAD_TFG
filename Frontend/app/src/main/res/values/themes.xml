<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TaskManagerApp" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Fondo blanco para toda la app -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Otros colores base para evitar problemas de contraste -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <!-- <item name="windowSplashScreenBackground">@color/white</item>
     windowSplashScreenBackground: Fondo de la pantalla de carga.
     windowSplashScreenAnimatedIcon: Icono o animación que aparece en la pantalla.
     postSplashScreenTheme: Tema que se aplicará después del splash.
     -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logotaskmanager1splashscreen</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/splash_background</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
    </style>
</resources>